@charset "utf-8"

@import "picnic/picnic.css"

body
  width 90vw
  max-width 700px
  height auto
  margin 30px auto 0

h1, h2, h3, h4
  margin 0
  padding 0

h3
  margin-right .5em !important

h4
  font-style italic

.card
  margin-top 20px
  padding 10px

  img
    border-radius .2em

  > div
    padding-bottom 0

    &:last-child
      padding-right 0

  &.flex
    position relative
    left .6em

pre
  margin-bottom 0

@media (max-width: 500px)
  .card.flex.one > *
    padding-left 0
    padding-right 0

@media (min-width: 500px)
  button
    margin-top 0 !important

  .card.flex.two-500 > :first-child
    padding-left 0

  footer span:last-child
    text-align right

@import "./_theme"

