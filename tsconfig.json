{
  "extends": "@cprecioso/tsconfig/bundler",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "src/**/*", "types/**/*", ".next/types/**/*.ts"]
}
